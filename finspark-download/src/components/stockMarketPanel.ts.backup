    // æ¸²æŸ“è‚¡æœ¬é¥¼å›¾
    renderSharesPieChart: function() {
      const chartDom = document.getElementById('sharesPieChart');
      if (!chartDom || typeof echarts === 'undefined') return;
      
      if (!this.sharesChartInstance) {
        this.sharesChartInstance = echarts.init(chartDom);
