            { value: restrictedShare.toFixed(2), name: 'å—é™æµé€šè‚¡', itemStyle: { color: '#3b82f6' } },
            { value: lockedShare.toFixed(2), name: 'é™å”®è‚¡', itemStyle: { color: '#6b7280' } }
